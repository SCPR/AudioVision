<% title = (category ||= nil) ? category.title.pluralize.titleize : "AudioVision" %>

<aside class="envoy">
    <div class="envoy-inner clearfix bound">
        <h1><a href="<%=archive_path(category: category.try(:slug))%>">See More <%= title %></a></h1>
        <ul class="thumbnails clearfix">
            <% Array(posts).each do |post| %>
                <li><a href="<%=post.link_path%>"><%= post.asset.small.tag %></a></li>
            <% end %>
        </ul>
    </div>
</aside><!--/ .envoy -->
