<div class="billboard layout-4 bound">

    <div class="row primary clearfix">
        <%= render "home/billboards/components/video", post: billboard.posts[0] %>
        <%= render "home/billboards/components/mobile", post: billboard.posts[1] %>
    </div><!--/ .row-primary -->


    <div class="row secondary clearfix">
    <% billboard.posts[2..4].each do |post| %>
        <%= render "home/billboards/components/image", post: post, size: :small %>
    <% end %>
    </div><!--/ .row-secondary -->

</div><!--/ .billboard -->
