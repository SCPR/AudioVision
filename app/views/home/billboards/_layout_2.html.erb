<div class="billboard layout-2 bound">

    <div class="row primary">

        <% if post = billboard.posts[0] %>
        <a href="<%=post.link_path%>" class="component slideshow">
            <div class="imagery">
                <div class="filmstrip clearfix">
                    <% post.assets.first(3).each do |asset| %>
                        <%= asset.eight.tag %>
                    <% end %>
                </div>
            </div>
            <hgroup class="caption">
                <h2 class="title"><%= post.title %></h2>
                <h3 class="subtitle"><%= post.teaser %></h3>
            </hgroup>
        </a><!--/ .component (slideshow) -->
        <% end %>
    </div><!--/ .row-primary -->

    <div class="row secondary clearfix">
        <% billboard.posts[1..3].each do |post| %>
        <a href="<%=post.link_path%>" class="component image">
            <div class="imagery">
                <%= post.asset.small.tag %>
            </div>
            <hgroup class="caption">
                <h2 class="title"><%= post.title %></h2>
                <h3 class="subtitle"><%= post.teaser %></h3>
            </hgroup>
        </a><!--/ .component (image) -->
        <% end %>
    </div><!--/ .row-secondary -->

</div><!--/ .billboard -->
