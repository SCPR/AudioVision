<div class="billboard layout-2 bound">

    <div class="row primary">
        <%= render "home/billboards/components/slideshow", post: billboard.posts[0] %>
    </div><!--/ .row-primary -->


    <div class="row secondary clearfix">
        <% billboard.posts[1..3].each do |post| %>
            <%= render "home/billboards/components/image", post: post, size: :small %>
        <% end %>
    </div><!--/ .row-secondary -->

</div><!--/ .billboard -->
