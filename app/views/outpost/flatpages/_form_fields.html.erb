<%= form_block "URL" do %>
  <%= f.input :path %>
  <%= f.input :redirect_to %>
<% end %>

<%= form_block "Details" do %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :content, input_html: { class: "ckeditor" } %>
<% end %>

<%= form_block "Extra" do %>
  <%= f.input :extra_head, input_html: { class: 'tiny' } %>
  <%= f.input :extra_footer, input_html: { class: 'tiny' } %>
<% end %>
