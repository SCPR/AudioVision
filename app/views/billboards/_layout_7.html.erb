<div class="billboard layout-7 bound">

    <div class="row primary clearfix">
        <%= render "billboards/components/image", post: billboard.posts[0], size: :full %>
        <%= render "billboards/components/mobile", post: billboard.posts[1] %>
    </div><!--/ .row-primary -->


    <div class="row secondary clearfix">
    <% Array(billboard.posts[2..3]).each do |post| %>
        <%= render "billboards/components/video", post: post %>
    <% end %>
    </div><!--/ .row-secondary -->

</div><!--/ .billboard -->
