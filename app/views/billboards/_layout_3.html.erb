<div class="billboard layout-3 bound">

    <div class="row primary">
        <%= render "billboards/components/slideshow", post: billboard.posts[0] %>
    </div><!--/ .row-primary -->


    <div class="row secondary clearfix">
    <% Array(billboard.posts[1..2]).each do |post| %>
        <%= render "billboards/components/video", post: post %>
    <% end %>
    </div><!--/ .row-secondary -->

</div><!--/ .billboard -->
