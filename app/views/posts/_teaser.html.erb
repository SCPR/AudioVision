<article>
    <a href="<%=post.link_path%>">
        <figure class="clearfix">
            <div class="img"><b><%= link_to post.asset.small.tag, post.link_path %></b></div>
            <figcaption class="clearfix">
                <div class="desc">
                    <h1><%= post.title %></h1>
                    <p><%= post.teaser %> <mark>Read More</mark></p>
                </div>
                <span class="date"><%= format_date(post.published_at) %></span>
            </figcaption>
        </figure>
    </a>
</article>
